- model_class = Course
.page-header
  %h1.admin-header.text-center=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:image_url)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:tutorials)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @courses.each do |course|
      %tr
        %td= course.name
        %td
          =image_tag course.image_url
        %td.full-description= course.description
        %td
          = link_to 'View Tutorials', course_tutorials_path(course)
        %td
          = link_to 'Show', course_path(course)
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_course_path(course), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), course_path(course), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_course_path, :class => 'btn btn-primary'
