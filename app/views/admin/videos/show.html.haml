- model_class = Video
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:tutorial_id) + ':'
  %br
  = @video.tutorial.title
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @video.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @video.description
%p
  %strong= model_class.human_attribute_name(:video_url) + ':'
  %br
  = @video.video_url
%p
  %strong= model_class.human_attribute_name(:image_url) + ':'
  %br
  = image_tag @video.image_url, class: 'course-image'


= link_to t('.back', :default => t("helpers.links.back")), admin_tutorial_videos_path(@tutorial), :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_tutorial_video_path(@tutorial, @video), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_tutorial_video_path(@tutorial, @video), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
