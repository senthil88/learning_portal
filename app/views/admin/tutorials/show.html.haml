- model_class = Tutorial
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:course_id) + ':'
  %br
  = @tutorial.course.name
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @tutorial.title
%p
  %strong= model_class.human_attribute_name(:image_url) + ':'
  %br
  = @tutorial.image_url
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @tutorial.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_course_tutorials_path(@course), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_course_tutorial_path(@course, @tutorial), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_course_tutorial_path(@course, @tutorial), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
