= simple_form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  .form-group.string.required.user_name
    %label.string.required.control-label.col-md-2{for: "is_admin"}
      %abbr{title: "required"} *
      is_admin
    .col-md-4
      = f.check_box :is_admin
  = f.button :submit, :class => 'btn-primary col-md-offset-2'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_users_path, :class => 'btn btn-default'
