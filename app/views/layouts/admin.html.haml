!!!
%html{lang: 'en'}
  %head
    %title Admin::Learning Portal
    = stylesheet_link_tag 'application', 'data-turbolinks-track' => true, media: 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %header
      = render 'layouts/common/header'

    %nav
      = render 'layouts/common/nav'

    - if @current_user && @current_user.is_admin
      .row
        .col-md-2.nav-side
          = render 'layouts/admin/left_side'

        .col-md-10.nav-main
          = render 'layouts/common/flash_message'

          - if content_for? 'breadcrumbs'
            = yield 'breadcrumbs'

          = yield

    %footer
      = render 'layouts/common/footer'
