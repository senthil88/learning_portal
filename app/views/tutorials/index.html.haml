- model_class = Tutorial
.page-header
  %h1.text-center
    %span.admin-header
      = link_to 'Courses ->', courses_path
      %span Tutorials (#{@course.name})
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:image_url)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:videos)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tutorials.each do |tutorial|
      %tr
        %td= tutorial.title
        %td
          = image_tag tutorial.image_url, class: 'course-image'
        %td.full-description= tutorial.description
        %td
          = link_to 'View Videos', tutorial_videos_path(tutorial)
        %td
          = link_to 'Show', course_tutorial_path(@course, tutorial)
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_course_tutorial_path(@course, tutorial), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), course_tutorial_path(@course, tutorial), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_course_tutorial_path, :class => 'btn btn-primary'
